+    char *cvalue = NULL;
+    cvalue = env_get("on_time");
+    do_pbb_function("on_time", cvalue, 20, 0);
+    cvalue = env_get("btn_press_time");
+    do_pbb_function("btn_press_time", cvalue, 16, 0);
+}
